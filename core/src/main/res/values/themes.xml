<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hangang.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Hangang color(Blue). -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary Hangang color(Orange). -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:popupMenuStyle">@style/HangangPopupMenu</item>
        <item name="popupMenuStyle">@style/HangangPopupMenu</item>
    </style>

    <style name="Theme.Hangang" parent="Theme.Hangang.Base">
        <!-- Background color -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Text Color -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_500</item>
        <item name="android:textColorTertiary">@color/gray_100</item>
    </style>

    <style name="Theme.Hangang.AlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="HangangBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/HangangModalStyle</item>
    </style>

    <style name="HangangModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="HangangPopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/background_popup_menu</item>
        <item name="android:popupElevation">8dp</item>
    </style>
</resources>