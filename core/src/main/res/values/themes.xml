<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hangang.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary Hangang color(Blue). -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary Hangang color(Orange). -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
    </style>

    <style name="Theme.Hangang" parent="Theme.Hangang.Base">
        <!-- Background color -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Text Color -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_500</item>
    </style>

    <style name="Theme.Hangang.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">#99000000</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>  <!--Background clear-->
        <item name="android:windowTranslucentStatus">false</item>
    </style>
</resources>