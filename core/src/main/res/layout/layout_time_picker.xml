<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center">

    <NumberPicker
        android:id="@+id/number_picker_week"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <NumberPicker
        android:id="@+id/number_picker_start_hour"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorPrimary"/>

    <NumberPicker
        android:id="@+id/number_picker_start_minute"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/number_picker_start_hour"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorPrimary"/>



    <NumberPicker
        android:id="@+id/number_picker_end_hour"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorPrimary"/>

    <NumberPicker
        android:id="@+id/number_picker_end_minute"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/number_picker_start_hour"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>