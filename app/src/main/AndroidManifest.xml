<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.hangang.hangang">

    <uses-permission android:name="android.permission.INTERNET" />

    <meta-data
        android:name="firebase_performance_logcat_enabled"
        android:value="true" />

    <application
        android:name=".HangangApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hangang"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.timetable.TimetableAddActivity"></activity>
        <activity android:name=".ui.timetable.TimetableListActivity" />
        <activity android:name=".ui.signup.activity.SignUpMajorActivity" />
        <activity android:name=".ui.signup.activity.SignUpActivity" />
        <activity android:name=".ui.signup.activity.SignUpEmailActivity" />
        <activity android:name=".ui.signup.activity.SignUpDocumentActivity" />
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.changepassword.activity.ChangePasswordActivity" />
    </application>

</manifest>