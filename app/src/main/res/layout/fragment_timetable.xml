<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="timetableViewModel"
            type="in.hangang.hangang.ui.timetable.viewmodel.TimetableViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:elevation="0dp">

            <in.hangang.core.view.appbar.BaseAppBar
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:centerTitle="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:showBackButton="false"
                app:showDivider="false" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timetable_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:layout_marginTop="?attr/actionBarSize"
            tools:context=".ui.timetable.fragment.TimetableFragment">

            <LinearLayout
                android:id="@+id/timetable_column"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginStart="34dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/timetable_mon"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/timetable_tue"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/timetable_wed"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/timetable_thu"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/timetable_fri"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:id="@+id/timetable_row_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:backgroundTint="?android:attr/textColorTertiary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timetable_column" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timetable_row_divider">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="34dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_09"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_10"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_11"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_12"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_13"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_14"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_15"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_16"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_17"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <in.hangang.core.view.timetable.TimetableLayout
                        android:id="@+id/timetable_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorPrimary"
                        app:dividerColor="?android:attr/textColorTertiary" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_rowStart="0"
                            app:layout_rowEnd="2"
                            app:layout_columnStart="0"
                            app:layout_columnEnd="1"
                            android:background="?attr/colorPrimary"
                            android:text="test"/>

                    </in.hangang.core.view.timetable.TimetableLayout>

                </LinearLayout>


            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="48dp"
            android:backgroundTint="?attr/colorPrimary"
            android:src="@drawable/ic_edit" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timetable_lecture_list_container"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@drawable/background_timetable_bottom_sheet"
            android:elevation="8dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <in.hangang.core.view.appbar.SearchAppBar
                android:id="@+id/timetable_lecture_search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/timetable_add_lecture_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:showBackButton="false" />

            <ImageButton
                android:id="@+id/button_timetable_lecture_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:src="@drawable/ic_adjustments"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timetable_lecture_search_bar" />

            <HorizontalScrollView
                android:id="@+id/scroll_view_majors"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:fadingEdgeLength="48dp"
                android:requiresFadingEdge="horizontal"
                android:scrollbars="none"
                app:layout_constraintEnd_toStartOf="@id/button_timetable_lecture_filter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timetable_lecture_search_bar">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <in.hangang.core.view.button.radiobutton.FilledRadioButton
                        android:id="@+id/radio_button_major_dip"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginStart="16dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="@string/major_simple_dip"
                        android:textSize="14sp" />

                    <in.hangang.core.view.button.radiobutton.FilledRadioButton
                        android:id="@+id/radio_button_major_0"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginStart="16dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="@string/major_simple_0"
                        android:textSize="14sp" />

                    <in.hangang.core.view.button.radiobutton.FilledRadioButton
                        android:id="@+id/radio_button_major_1"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="@string/major_simple_1"
                        android:textSize="14sp" />

                    <in.hangang.core.view.button.radiobutton.FilledRadioButton
                        android:id="@+id/radio_button_major_2"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="@string/major_simple_2"
                        android:textSize="14sp" />

                    <in.hangang.core.view.button.radiobutton.FilledRadioButton
                        android:id="@+id/radio_button_major_3"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="@string/major_simple_3"
                        android:textSize="14sp" />

                    <in.hangang.core.view.button.radiobutton.FilledRadioButton
                        android:id="@+id/radio_button_major_4"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="@string/major_simple_4"
                        android:textSize="14sp" />

                    <in.hangang.core.view.button.radiobutton.FilledRadioButton
                        android:id="@+id/radio_button_major_5"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="@string/major_simple_5"
                        android:textSize="14sp" />

                    <in.hangang.core.view.button.radiobutton.FilledRadioButton
                        android:id="@+id/radio_button_major_6"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="@string/major_simple_6"
                        android:textSize="14sp" />

                    <in.hangang.core.view.button.radiobutton.FilledRadioButton
                        android:id="@+id/radio_button_major_7"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="@string/major_simple_7"
                        android:textSize="14sp" />

                    <in.hangang.core.view.button.radiobutton.FilledRadioButton
                        android:id="@+id/radio_button_major_8"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="@string/major_simple_8"
                        android:textSize="14sp" />

                    <in.hangang.core.view.button.radiobutton.FilledRadioButton
                        android:id="@+id/radio_button_major_9"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="16dp"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text="@string/major_simple_9"
                        android:textSize="14sp" />

                </RadioGroup>

            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_timetable_lectures"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scroll_view_majors" />

            <ProgressBar
                android:id="@+id/recycler_view_timetable_lectures_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scroll_view_majors"
                app:layout_constraintVertical_bias="0.02" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
