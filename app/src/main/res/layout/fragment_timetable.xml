<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="timetableViewModel"
            type="in.hangang.hangang.ui.timetable.viewmodel.TimetableViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/timetable_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:layout_marginTop="?attr/actionBarSize"
            tools:context=".ui.timetable.fragment.TimetableFragment"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/timetable_column"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginStart="34dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/timetable_mon"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/timetable_tue"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/timetable_wed"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/timetable_thu"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/timetable_fri"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:id="@+id/timetable_row_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:backgroundTint="?android:attr/textColorTertiary" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/timetable_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="34dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_09"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_10"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_11"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_12"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_13"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_14"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_15"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_16"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="top|right"
                            android:paddingRight="6dp"
                            android:text="@string/time_17"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <in.hangang.core.view.timetable.TimetableLayout
                        android:id="@+id/timetable_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorPrimary"
                        app:dividerColor="?android:attr/textColorTertiary" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="48dp"
            android:backgroundTint="?attr/colorPrimary"
            android:src="@drawable/ic_edit" />

        <FrameLayout
            android:id="@+id/timetable_bottom_sheet_container"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@drawable/background_timetable_bottom_sheet"
            android:elevation="8dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"/>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:elevation="0dp">

            <in.hangang.core.view.appbar.BaseAppBar
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:centerTitle="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:showBackButton="false"
                app:showDivider="false" />

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
