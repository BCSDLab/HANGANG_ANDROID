<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="8dp"
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp">
        <shape
            android:shape="rectangle">

            <corners
                android:radius="8dp" />

            <solid
                android:color="?attr/colorSurface" />

            <stroke
                android:width="1dp"
                android:color="?android:attr/textColorTertiary" />
        </shape>
    </item>
</layer-list>
